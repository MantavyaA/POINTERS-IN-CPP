#include <iostream>
using namespace std;

int main() {
    int a = 20;
    double c = 2.5;
    bool d = true;

    int* ptr1 = &a;
    double* ptr3 = &c;
    bool* ptr4 = &d;

    cout << "Value of Integer : " << a << endl;
    cout << "Before Increment : " << ptr1 << endl;
    ptr1++;
    cout << "After Increment  : " << ptr1 << endl;
    cout << endl;

    cout << "Value of Double  : " << c << endl;
    cout << "Before Increment : " << ptr3 << endl;
    ptr3++;
    cout << "After Increment  : " << ptr3 << endl;
    cout << endl;

    cout << "Value of Boolean : " << d << endl;
    cout << "Before Increment : " << ptr4 << endl;
    ptr4++;
    cout << "After Increment  : " << ptr4 << endl;
    cout << endl;

    return 0;
}


Value of Integer : 20
Before Increment : 0x7ffd54b3b9d4
After Increment  : 0x7ffd54b3b9d8

Value of Double  : 2.5
Before Increment : 0x7ffd54b3b9c8
After Increment  : 0x7ffd54b3b9d0

Value of Boolean : 1
Before Increment : 0x7ffd54b3b9c7
After Increment  : 0x7ffd54b3b9c8
